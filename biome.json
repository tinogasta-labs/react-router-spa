{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": { "ignoreUnknown": false, "ignore": [] },
  "formatter": {
    "enabled": false
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "recommended": true,
        "noConsole": "error",
        "noExplicitAny": "off"
      },
      "style": {
        "recommended": true,
        "useImportType": "error"
      },
      "complexity": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "error"
      },
      "a11y": {
        "recommended": true
      },
      "nursery": {
        "recommended": true,
        "noProcessEnv": "off"
      }
    }
  }
}
